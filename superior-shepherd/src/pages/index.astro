---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Menu from "../components/Menu.astro"
import Footer from "../components/Footer.astro"
import "./styles/global.css";

const pageTitle = "首页";
---

<Layout title="欢迎来到Astro">
	<main>
		<svg>···
		</svg>
		<Menu/>
		<Footer />

		<h1>欢迎来到 <span class="text-gradient">Astro</span></h1>
		<h2>P211012592<span class="text-gradient">周子惠</span></h2>
		<h3>2021级新闻学3班<span><a href="https://www.baidu.com"></span> </a></h3>
		<p class="instructions">
			To get started, open the directory <code>src/pages</code> in your project.<br
			/>
			<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Documentation"
				body="Learn how Astro works and explore the official API docs."
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Integrations"
				body="Supercharge your project with new frameworks and libraries."
			/>
			<Card
				href="https://astro.build/themes/"
				title="Themes"
				body="Explore a galaxy of community-built starter themes."
			/>
			<Card
				href="https://astro.build/chat/"
				title="Community"
				body="Come say hi to our amazing Discord community. ❤️"
			/>
		</ul>
	</main>
	<footer>
		<hr />
		<p><span></span></p>
	</footer>
</Layout>

<style>
	/* 页面整体样式 */
	body {
			margin: 0;
			padding: 0;
			font-family: 'Arial', sans-serif;
			background: linear-gradient(to right, #c2e5ef, #f3e2af); /* 蓝色到黄色的渐变 */
	}

	main {
			margin: auto;
			padding: 1rem;
			width: 800px;
			max-width: calc(100% - 2rem);
			color: #005a9c;
			font-size: 20px;
			line-height: 1.6;
	}

	nav a {
			color: white;
	}

	.astro-a {
			position: absolute;
			top: -32px;
			left: 50%;
			transform: translateX(-50%);
			width: 220px;
			height: auto;
			z-index: -1;
	}

	h1 {
			font-size: 4rem;
			font-weight: 700;
			line-height: 1;
			text-align: center;
			margin-bottom: 1em;
	}

	h2 {
			text-align: center;
	}

	/* 文本渐变样式 */
	.text-gradient {
			background-image: linear-gradient(to right, #005a9c, #f2c94c); /* 蓝色到黄色的文本渐变 */
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-size: 400%;
			background-position: 0%;
			animation: textGradient 5s infinite alternate;
	}

	@keyframes textGradient {
			0% { background-position: 0%; }
			100% { background-position: 100%; }
	}

	.instructions {
			margin-bottom: 2rem;
			border: 1px solid rgba(255, 255, 255, 0.25);
			background: rgba(255, 255, 255, 0.1);
			padding: 1.5rem;
			border-radius: 8px;
	}

	.instructions code {
			font-size: 0.8em;
			font-weight: bold;
			background: rgba(255, 255, 255, 0.1);
			color: white;
			border-radius: 4px;
			padding: 0.3em 0.4em;
	}

	.instructions strong {
			color: white;
	}

	.link-card-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
			gap: 2rem;
			padding: 0;
	}
</style>
import MusicPlayer from "../components/MusicPlayer.astro"
import "./styles/global.css";


const pageTitle = "心理健康科普";
---

<Layout title={pageTitle}>
	<main></main>
		<svg>···
		</svg>
		<Menu/>
		<Footer />
		<MusicPlayer />

		
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>心理健康科普</title>
    <h1 style="text-align:center;">心理健康<span></span>科普网站</h1>
		<h2 style="text-align: center;">P211012592<span>周子惠</span></h2>
		<!DOCTYPE html>
		<html lang="zh">
		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<title>心理健康科普 - 心灵鸡汤生成器</title>
			<style>
				body {
					font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
					background-color: #fff; /* 背景颜色 */
					margin: 0;
					padding: 10px;
					text-align: center;
				}
				#quoteContainer {
					max-width: 500px; /* 生成器的最大宽度 */
					margin: 35px auto; /* 居中显示 */
				}
				#generateQuoteButton {
					padding: 10px 20px;
					font-size: 16px;
					color: #333; /* 按钮文本颜色 */
					background-color: #ffc107; /* 按钮背景颜色 */
					border: none;
					border-radius: 5px;
					cursor: pointer;
					transition: background-color 0.3s;
				}
				#generateQuoteButton:hover {
					background-color: #e0a800; /* 鼠标悬浮时按钮颜色变深 */
				}
				
				#quoteDisplay {
					margin-top: 20px;
					padding: 15px;
					font-size: 16px;
					line-height: 1.6;
					color: #333; /* 文本颜色 */
					background-color: #f5f5f5; /* 显示区域背景颜色 */
					border-left: 4px solid #ffc107; /* 边框颜色 */
					border-radius: 5px;
				}
				.animate-hover:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease-in-out;
  }

	@keyframes shake {
      0%, 100% { transform: translateX(0); }
      10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
      20%, 40%, 60%, 80% { transform: translateX(5px); }
    }

    .animate-shake {
      animation: shake 0.82s cubic-bezier(.36,.07,.19,.97);
      /* 确保transform属性正确设置 */
      transform: translate3d(0, 0, 0);
      backface-visibility: hidden;
      perspective: 1000px;
    }
			</style>
		</head>
		<body>
		
			<div id="quoteContainer">
				<button id="generateQuoteButton">心灵慰藉</button>
				<div id="quoteDisplay"></div>
			</div>
		
			<script>
				document.addEventListener('DOMContentLoaded', function() {
					const quotes = [
						"每一次挑战都是成长的机会。",
						"不要害怕失败，它是通往成功的必经之路。",
						"相信自己，你拥有改变未来的力量。",
						"每天都是一个新的开始，把握今天，让明天更好。",
						"微笑是心灵的良药，它不需要成本，却能治愈许多。",
						"深呼吸，放轻松，生活不会因为一时的忧虑而改变。",
						"你是自己命运的主宰，不要让他人的看法左右你的选择。",
						"不要等待机会，而是创造机会。",
						"记住，最大的风险是从来不敢冒险。",
						"你的想法塑造你的现实，保持积极，好事就会发生。"
					];
		
					const generateQuoteButton = document.getElementById('generateQuoteButton');
					const quoteDisplay = document.getElementById('quoteDisplay');
		
					generateQuoteButton.addEventListener('click', function() {
						const randomIndex = Math.floor(Math.random() * quotes.length);
						quoteDisplay.textContent = '“' + quotes[randomIndex] + '”'; // 添加引号
						// 假设这是在某个点击事件处理函数中
const button = document.getElementById('generateQuoteButton');
button.classList.add('animate-shake');

// 动画结束后移除动画类
button.addEventListener('animationend', () => {
  button.classList.remove('animate-shake');
});
						
					});
				});
			</script>
		</body>
		</html>
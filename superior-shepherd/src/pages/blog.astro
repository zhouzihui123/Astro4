---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Menu from "../components/Menu.astro"
import Footer from "../components/Footer.astro"
import "./styles/global.css";
---

<Layout title="欢迎来到Astro">
	<main>
		<svg>	···
    </svg>
		<Menu/>
		<Footer />
		<h1>网络文章</h1>
	<p>在这个页面，我将展示一些关于我的文章</p>
		</p>
		<section class="link-card-grid">
      <article class="link-card">
        <a href="/md/1" >陋室铭赏析</a>
	</main>
</Layout>

<style>
	body {
			margin: 0;
			padding: 0;
			font-family: 'Arial', sans-serif;
			background: linear-gradient(to right, #c2e5ef, #f3e2af); /* 蓝色到黄色的渐变 */
	}
	
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color:white;
		font-size: 20px;
		line-height: 1.6;
	}
	nav a {
		color:white;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h2 {
		text-align: center;
		font-size: 20px;
	}
	p{
		text-align: justify;
		color: rgb(174, 139, 215);
	}
	.text-gradient {
		background: linear-gradient(to right, #c2e5ef, #f3e2af);;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
